# Change the following to match your installation
BOINC_DIR = ../boinc_32_707/

CXX = g++

CXXFLAGS = -g \
    -m32 \
    -I$(BOINC_DIR)/include/boinc \
    -DARCH_TRIPLET=i686-pc-linux-gnu \
    -DBITNESS=32


LDFLAGS = -static -m32 \
    -L$(BOINC_DIR)/lib

PROG = primegrid_llr_wrapper_1.00_i686-pc-linux-gnu

all: wrapper

clean:
	rm -f $(PROG) *.o

distclean:
	/bin/rm -f $(PROG) *.o

wrapper: wrapper.o
	$(CXX) $(LDFLAGS) -o $(PROG) wrapper.o -lpthread -lboinc_api -lboinc

