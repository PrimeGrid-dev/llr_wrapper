# Change the following to match your installation
BOINC_DIR = ../boinc_32_707/

CXX = g++

CXXFLAGS = -g \
    -m32 \
    -I$(BOINC_DIR)/include/boinc \
    -DBITNESS=32

LDFLAGS = -static -m32 \
    -L$(BOINC_DIR)/lib

PROG = primegrid_llr_wrapper_7.00_i686-pc-linux-gnu

all: clean $(PROG)

clean:
	rm -f $(PROG) *.o

$(PROG): wrapper.o
	$(CXX) $(LDFLAGS) -o $(PROG) wrapper.o -lpthread -lboinc_api -lboinc

