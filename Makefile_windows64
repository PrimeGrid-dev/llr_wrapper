# Change the following to match your installation
BOINC_DIR ?= ../boinc_6.12.43
BOINC_INSTALL_DIR ?= ../boinc_6.12.43_64

CXX = g++

CXXFLAGS = -g \
    -I$(BOINC_DIR)/lib \
    -I$(BOINC_INSTALL_DIR)/include/boinc \
    -DBITNESS=64

LDFLAGS = -L$(BOINC_INSTALL_DIR)/lib 

PROG = primegrid_llr_wrapper_7.00_windows_x86_64.exe

all: clean $(PROG)

clean:
	rm -f $(PROG) *.o

$(PROG): wrapper.o
	$(CXX) $(LDFLAGS) -o $(PROG) wrapper.o -lboinc_api -lboinc

