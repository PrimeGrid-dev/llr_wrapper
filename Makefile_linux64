# Change the following to match your installation
BOINC_DIR ?= ../boinc_64_707/

CXX = g++

CXXFLAGS = -g \
    -m64 \
    -I$(BOINC_DIR)/include/boinc \
    -DBITNESS=64

LDFLAGS = -static -m64 \
    -L$(BOINC_DIR)/lib

PROG = primegrid_llr_wrapper_7.00_x86_64-pc-linux-gnu

all: clean $(PROG)

clean:
	rm -f $(PROG) *.o

$(PROG): wrapper.o
	$(CXX) $(LDFLAGS) -o $(PROG) wrapper.o -lpthread -lboinc_api -lboinc

